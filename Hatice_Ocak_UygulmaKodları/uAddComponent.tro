  function AddMenu(uForm,ulabelMenu,uCaption);
  var
    labelmenu  : TClProLabel;
    buttonMainPage ,buttonProjectPage,buttonAddProjectPage, buttonEmployeePage,buttonProfilePage : TClProButton;
    
    {
      // BUTONLARIN GÖRÜNECEĞİ LABEL
        labelmenu=uForm.AddNewProLabel(uForm,ulabelMenu, uCaption);
        labelmenu.align=alMostBottom;
        labelmenu.margins.bottom=10;// alttaki çizgi ile karıştığı için azıcıkyukarı aldım 
        labelmenu.height=70;
        labelmenu.clProSettings.BackgroundColor= clAlphaColor.clHexToColor('#eca514');
        labelmenu.clProSettings.IsRound=True;
        labelmenu.SetclProSettings(labelmenu.clProSettings);
        
      // MAİN SAYFASINA YÖNLENDİREN BUTON 
        buttonMainPage = uForm.AddNewProButton(labelmenu, 'buttonMainPage', '');
        buttonMainPage.align=alLeft;
        buttonMainPage.margins.left = 35;
        buttonMainPage.Width=50;
        buttonMainPage.clProSettings.PictureAutoFit = True;
        buttonMainPage.clProSettings.PictureSource = 'https://resmim.net/cdn/2025/08/19/XLwZli.png';
        buttonMainPage.SetclProSettings(buttonMainPage.clProSettings);
        uForm.AddNewEvent(buttonMainPage,tbeOnClick,'GoToManagerMainPage');
      
      // PROJE SAYFASINA YÖNLENDİREN BUTON
        buttonProjectPage = uForm.AddNewProButton(labelmenu, 'buttonProjectPage', '');
        buttonProjectPage.align=alLeft;
        buttonProjectPage.margins.left = 20;
        buttonProjectPage.Width=50;
        buttonProjectPage.clProSettings.PictureAutoFit = True;
        buttonProjectPage.clProSettings.PictureSource = 'https://resmim.net/cdn/2025/08/19/XLwJnT.png';
        buttonProjectPage.SetclProSettings(buttonProjectPage.clProSettings);
        uForm.AddNewEvent(buttonProjectPage,tbeOnClick,'GoToManagerProjectPage');
      
      // PROJE EKLEME SAYFASINA YÖNLENDİREN BUTON
        buttonAddProjectPage = uForm.AddNewProButton(labelmenu, 'buttonAddProjectPage', '');
        buttonAddProjectPage.align=alCenter;
        buttonAddProjectPage.margins.left = 10;
        buttonAddProjectPage.margins.right = 10;
        buttonAddProjectPage.Width=50;
        buttonAddProjectPage.clProSettings.PictureAutoFit = True;
        buttonAddProjectPage.clProSettings.PictureSource = 'https://resmim.net/cdn/2025/08/19/XLClSx.png';
        buttonAddProjectPage.SetclProSettings(buttonAddProjectPage.clProSettings);
        uForm.AddNewEvent(buttonAddProjectPage,tbeOnClick,'GoToManagerAddProjectPage');
      
      // PROFİL SAYFASINA YÖNLENDİREN BUTON
        buttonProfilePage = uForm.AddNewProButton(labelmenu, 'buttonProfilePage', '');
        buttonProfilePage.align=alRight;
        buttonProfilePage.margins.right= 35;
        buttonProfilePage.Width=50;
        buttonProfilePage.clProSettings.PictureAutoFit = True;
        buttonProfilePage.clProSettings.PictureSource = 'https://resmim.net/cdn/2025/08/19/XLEzmH.png';
        buttonProfilePage.SetclProSettings(buttonProfilePage.clProSettings);
        uForm.AddNewEvent(buttonProfilePage,tbeOnClick,'GoToManagerProfilPage');
      
      // PERSONEL BİLGİ SAYFASINA YÖNLENDİREN BUTON
        buttonEmployeePage = uForm.AddNewProButton(labelmenu, 'buttonEmployeePage', '');
        buttonEmployeePage.align=alRight;
        buttonEmployeePage.margins.right = 20;
        buttonEmployeePage.Width=50;
        buttonEmployeePage.clProSettings.PictureAutoFit = True;
        buttonEmployeePage.clProSettings.PictureSource = 'https://resmim.net/cdn/2025/08/19/XLEL6W.png';
        buttonEmployeePage.SetclProSettings(buttonEmployeePage.clProSettings);
        uForm.AddNewEvent(buttonEmployeePage,tbeOnClick,'GoToManagerEmployeePage');
    }
  

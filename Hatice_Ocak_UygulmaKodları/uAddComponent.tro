    function AddPanelButton (uForm,panelButtonname,panelButtonalign,butonname)
      var
      panelButton :TclProPanel;
      buttonp :TClProButton;
      {
        panelButton = uForm.AddNewProPanel(uForm,panelButtonname);
        panelButton.Align=alTop;
        panelButton.Align=panelButtonalign;
        panelButton.height=50;
        panelButton.width=190;
        panelButton.Margins.top=10;
        panelButton.Margins.bottom=10;
        panelButton.margins.Left=10;
        panelButton.margins.Right=10;
      
        panelButton.clProSettings.BackgroundColor = clAlphaColor.clHexToColor('#995f1e');
        panelButton.SetclProSettings(panelButton.clProSettings);
        
        buttonp=uForm.AddNewProButton(panelButton, butonname ,butonname);
        buttonp.Align=alCenter;
        buttonp.clProSettings.FontColor = clAlphaColor.clHexToColor('#dbbe8d');
        buttonp.SetclProSettings(buttonp.clProSettings);
        //buttonp.clTagString = parametre;
        
        uForm.AddNewEvent(buttonp,tbeOnClick,'GoToChoice');
        
        
      }
      
